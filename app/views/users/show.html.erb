<section class="user">
    <h1><%= @user.name %></h1>
    <p>nickname: <%= @user.username %></p>
    <h2><%= mail_to(@user.email) %></h2>
    Member since: <%= @user.created_at.strftime("%B %Y") %>

    <% if current_user?(@user) %>
        <div class="actions">
            <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
            <%= link_to "Delete Account", @user,
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "button delete" %>
        </div>
    <% end %>

    <% if @reviews.present? %>
        <h3>Reviews</h3>
        <% @reviews.each do |review| %>
        <div class="review">
            <div class="details">
            <span class="title">
                <%= link_to review.movie.title, review.movie %>
            </span>
            <%= pluralize(review.stars, 'star') %>
            <span class="date">
                <%= time_ago_in_words(review.created_at) %> ago
            </span>
            <p>
                <%= review.comment %>
            </p>
            </div>
        </div>
        <% end %>
    <% end %>
</section>