<h1>Reviews of <%= link_to @movie.title, @movie  %> </h1>

<% if @movie.reviews.size == 0 %>
    <p>No reviews yet! Be the first one to share!</p>
<% end %>

<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= render "shared/stars", percent: review.stars_as_percent %>
      <p>
        <%= review.name %>
        <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
        </span>
      </p>
      <p>
        <%= review.comment %>
      </p>
    </li>
  <% end %>
</ul>